extends layout

block content
	.container
		h1 Welcome to My Store!
		#product-inventory
		ul#wishlist Your Wishlist
			

	script#product-template(type='text/x-handlebars-template')
		.product
			h2.product-title	Title: {{title}}
				hr
				button.btn.btn-primary.add-btn(type="submit",action=false) Add To Your Wishlist
			img(src= '{{image}}' ) 
			{{#if sale}}
			p
				del Price: {{cost}}
				br
				ins Current Price: {{sale}}
			{{else}}
			p	Price: {{cost}}
			{{/if}}
			{{#each details}}
			p {{this}}
			{{/each}}
			
			


	script#wishlist-template(type='text/x-handlebars-template')
		li.wishlist-item
			h2 Title: {{title}}
			button.btn.btn-danger.delete-btn(type="submit",action=false) Delete this item
